<div class="text-center">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %>さん</h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 120 }) %>" alt="">
        <h4>自己紹介</h4>
        <p><%= @user.introduce %></p>
      </div>
    </div>
  
  <div class="col-sm-13">
    <ul class="nav nav-tabs nav-justified mb-4">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">IDEAS <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followings</a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followers</a></li>
    </ul>
    <%= render 'posts/posts', posts: @posts %>
  </div>
</div>