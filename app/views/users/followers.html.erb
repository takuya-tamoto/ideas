<div class="text-center">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %>さん</h3>
        
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 120 }) %>" alt="">
        <h5>自己紹介</h5>
        <p><%= @user.introduce %></p>
      </div>
    </div>
    <div class= "col-md-2 offset-md-5">
      <span><%= render 'relationships/follow_button', user: @user %></span>
    </div>
  
  <div class="col-sm-13">
    <ul class="nav nav-tabs nav-justified mb-4">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">IDEAS <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー  <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
    </ul>
    <%= render 'users', users: @followers %>
  </div>
</div>